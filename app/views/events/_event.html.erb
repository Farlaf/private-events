<div id="<%= dom_id event %>">
  <%= image_tag(event.title_image, style: "max-width: 100%;") if event.title_image.attached?  %>
  <h3><%= event.title %></h3>
  <span style="display: flex; align-items: center;"><%= image_tag(event.author.avatar_thubnail) %>&nbsp;<%= event.author.name %></span>
  <p>
    <%= event.date %>
    <br>
    <%= event.location %>
  </p>
  <div>
    <%= event.body %>
  </div>
</div>
