<!DOCTYPE html>
<html>
  <head>
    <title>PrivateEvents</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>
  <body>
    <header style="display: flex; justify-content: space-between; align-items: center; padding-bottom: 20px;">
      <%= link_to root_path do %>
        Logo + Privat Evnts
      <% end %>
      <p style="color: green"><%= notice %></p>
      <p style="color: red"><%= alert %></p>
      <div class="menu-links" style="display: flex; align-items: center; gap: 10px;">
        <%= link_to "New event", new_event_path %>
        <% if current_user %>
          <%= link_to edit_user_registration_path, style: "display: flex; align-items: center; " do %>
            <%= image_tag(current_user.avatar_thubnail) %>
            <%= current_user.name %>
          <% end %>
          <%= link_to "Logout", destroy_user_session_path, data: { turbo_method: :delete } %>
        <% else %>
          <%= link_to "Sign in", new_user_session_path %>
          <%= link_to "Sing up", new_user_registration_path %>
        <% end %>
      </div>
    </header>
    <main style="max-width: 700px; margin: 20px auto;">
      <%= yield %>
    </main>
  </body>
</html>
